{
	"compilerOptions": {
		"target": "ES2020", // ES2020 is the latest version of JavaScript
		"module": "commonjs", // CommonJS is the module system used by Node.js
		"strict": true, // Enables all strict type-checking options
		"esModuleInterop": true, // Enables compatibility with ES modules
		"skipLibCheck": true, // Skips type checking of declaration files
		"forceConsistentCasingInFileNames": true, // Enforces consistent casing in file names
		"experimentalDecorators": true, // Enables experimental decorators
		"emitDecoratorMetadata": true, // Emits design type metadata for decorated declarations
		"outDir": "./dist", // Specifies the output directory for compiled files
		"rootDir": "./" // Specifies the root directory for source files
	},
	"include": ["src/**/*.ts"], // Specifies the files to include in the compilation
	"exclude": ["node_modules", "dist"] // Specifies the files to exclude from the compilation
}
